@model List<Profession>
@{
    int count = 0;
}
<div class="container">
    <div>
        <h1>Profession:</h1>
        <a asp-action="create" asp-controller="Profession" class="btn btn-primary">Create</a>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Profession profession in Model)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@profession.Id</td>
                        <td>@profession.Name</td>
                        <td>
                            <a asp-action="Update" asp-controller="Profession" asp-route-id="@profession.Id" class="btn btn-primary">Update</a>
                            <a asp-action="Delete" asp-controller="Profession" asp-route-id="@profession.Id" class="btn btn-danger">Delete</a>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
